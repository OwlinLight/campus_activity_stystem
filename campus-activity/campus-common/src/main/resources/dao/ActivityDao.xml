    <select id="listActivityPassed" resultMap="ShowacMap">
        select t1.id,t1.name as activityName,t1.start_time,t1.end_time, t2.name as collegeName,t3.name as directorName
        from activity t1, college t2, auditor t3, status t4
        where t1.status_id = t4.id and result = 'pass' and  t1.college_id = t2.id and t1.director_id = t3.id
    </select>
    <select id="listActivityFailed" resultMap="ActivityMap">
